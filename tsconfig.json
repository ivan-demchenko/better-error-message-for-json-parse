{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "lib": ["es6"]
  },
  "include": ["./lib/**/*"],
  "exclude": [
    "node_modules"
  ]
}
